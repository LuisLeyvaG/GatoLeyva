<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color_c_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:stretchColumns="2">

            <TableRow android:background="@color/color_d_buttons">

                <TextView
                    android:layout_column="1"
                    android:text="@string/player_string"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="1"
                    android:text="@string/score_string"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:text="SaulGOD"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_column="1"
                    android:text="16"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:text="LUAICH"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_column="1"
                    android:text="16"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/v00"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_fire" />

            <ImageView
                android:id="@+id/v01"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_water" />

            <ImageView
                android:id="@+id/v02"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_fire" />

            <ImageView
                android:id="@+id/v10"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_water" />

            <ImageView
                android:id="@+id/v11"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_fire" />

            <ImageView
                android:id="@+id/v12"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_water" />


            <ImageView
                android:id="@+id/v20"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_fire" />

            <ImageView
                android:id="@+id/v21"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_water" />

            <ImageView
                android:id="@+id/v22"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/bordes_bg"
                android:minHeight="137dp"
                android:padding="10dp"
                android:src="@drawable/ic_fire" />


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/tv_bottom_bg"
                android:drawableBottom="@drawable/ic_fire"
                android:drawableTint="@color/gray"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@string/winner_string"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/tv_bottom_bg"
                android:drawableBottom="@drawable/ic_water"
                android:drawableTint="@color/gray"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@string/turn_string"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>